<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.focustimer.focustimer.components.headerBar.headerBarController"
          stylesheets="@headerBar.css"
          styleClass="header-bar"
          maxWidth="Infinity"
          prefHeight="36.0">
    <columnConstraints>
        <ColumnConstraints prefWidth="60" />
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
        <ColumnConstraints prefWidth="140" />
    </columnConstraints>

    <Button fx:id="btnMenu" styleClass="btn" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT" onAction="#btnMenuHandler">
        <graphic>
            <ImageView styleClass="btn-img" fitWidth="32" fitHeight="32" >
                <Image url="@../../icons/menu.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Text fx:id="templateText" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="CENTER" />

    <HBox GridPane.rowIndex="0" GridPane.columnIndex="2">
        <Button fx:id="btnMinimize" styleClass="btn" onAction="#btnMinimizeHandler">
            <graphic>
                <ImageView styleClass="btn-img" fitWidth="32" fitHeight="32">
                    <Image url="@../../icons/minimize.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnFullScreen" styleClass="btn" onAction="#btnFullScreenHandler">
            <graphic>
                <ImageView styleClass="btn-img" fitWidth="32" fitHeight="32">
                    <Image url="@../../icons/full.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnClose" styleClass="btn" onAction="#btnCloseHandler">
            <graphic>
                <ImageView styleClass="btn-img" fitWidth="32" fitHeight="32">
                    <Image url="@../../icons/close.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

</GridPane>
