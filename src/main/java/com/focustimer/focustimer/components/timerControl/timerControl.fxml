<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<AnchorPane stylesheets="@timerControl.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.focustimer.focustimer.components.timerControl.timerControlController">
    <HBox fx:id="timerControlContainer" prefHeight="32.0" prefWidth="360.0">
        <Button fx:id="btnStart" onAction="#handleStart">
            <graphic>
                <ImageView fx:id="btnStartImg">
                    <Image url="@../../icons/play.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnStop" onAction="#handleStop">
            <graphic>
                <ImageView fx:id="btnStopImg">
                    <Image url="@../../icons/stop.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
