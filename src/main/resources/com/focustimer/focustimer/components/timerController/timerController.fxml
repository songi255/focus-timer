<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane stylesheets="@timerController.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.focustimer.focustimer.components.timerControlController">
    <HBox fx:id="timerControlContainer" prefHeight="32.0" prefWidth="360.0">
        <ImageView fx:id="btnStart" onMouseClicked="#handleStart">
            <Image url="@../../icons/play.png"/>
        </ImageView>
        <ImageView fx:id="btnStop" onMouseClicked="#handleStop">
            <Image url="@../../icons/stop.png"/>
        </ImageView>
    </HBox>
</AnchorPane>
